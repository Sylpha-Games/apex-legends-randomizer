<div class="text-center">
  <h1>バトル記録編集</h1>
  <p class="font-weight-bold mt-5">作成日時：<%= @battle_record.created_at.to_s(:datetime_jp) %></p>
</div>
<div class="row my-5">
  <div class="offset-xl-4 col-xl-4 offset-md-3 col-md-6">
    <%= form_with(model: @battle_record, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :legend, 'レジェンド' %>
        <%= f.collection_select(:legend_id, @legends, :id, :name, {prompt: "選択してください"}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.label :weapon, '武器' %>
        <%= f.collection_select(:weapon_id, @weapons, :id, :name, {prompt: "選択してください"}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.label :stage, 'ステージ' %>
        <%= f.collection_select(:stage_id, @stages, :id, :name, {prompt: "選択してください"}, {class: 'form-control'}) %>
      </div>
      <div class="form-group">
        <%= f.label :damage, 'ダメージ' %>
        <%= f.number_field(:damage, class: 'form-control') %>
      </div>
      <%= f.submit '登録する', class: 'btn btn-primary btn-block mt-5' %>
    <% end %>
  </div>
</div>
<div class="text-center my-5">
  <p><%= link_to 'バトル記録を削除する', battle_record_path(@battle_record), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'text-danger' %></p>
</div>
