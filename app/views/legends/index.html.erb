<div class="text-center mb-5">
  <h1>レジェンド一覧</h1>
  <div class="row mt-5">
    <% @legends.each do |legend| %>
      <div class="col-xl-6 border pt-5 pb-3">
        <p>
          <img class="rounded" src=<%= "/legends/#{legend.image}" %> alt="Legend" width="400px" height="240px">
        </p>
        <p><%= link_to legend.name, legend_path(legend), class: 'font-weight-bold h5' %></p>
      </div>
    <% end %>
  </div>
</div>
