<div class="text-center mb-5">
  <% if @legend %>
    <p>
      <img class="rounded mx-auto" src=<%= "/legends/#{@legend.image}" %> alt="Legend" width="320px" height="200px">
    </p>
    <p><%= link_to @legend.name, legend_path(@legend), class: 'font-weight-bold h4' %></p>
  <% end %>
  <p class="mt-4 mb-4"><%= link_to 'レジェンドランダム生成', '/legends/random', method: :post, class: 'btn btn-lg btn-primary' %></p>
  <% if @legend %>
    <p class="mt-4 mb-5"><%= link_to 'ランダム生成削除', '/legends/random_destroy', method: :post, data: {confirm: "削除しますか？"}, class: 'btn btn-lg btn-danger' %></p>
  <% end %>
  <% if @weapon %>
    <p class="mt-5">
      <img class="rounded mx-auto" src=<%= "/weapons/#{@weapon.image}" %> alt="Weapon" width="320px" height="200px">
    </p>
    <p>
      <%= link_to @weapon.name, weapon_path(@weapon), class: 'font-weight-bold h4' %>
      <img class="rounded ml-2 mb-2" src=<%= "/ammos/#{@weapon.ammo.image}" %> alt="Ammo" width="40px" height="40px">
    </p>
    <p class="font-weight-bold h5"><%= @weapon.weapon_category.name %></p>
  <% end %>
  <p class="mt-4 mb-4"><%= link_to '武器ランダム生成', '/weapons/random', method: :post, class: 'btn btn-lg btn-primary' %></p>
  <% if @weapon %>
    <p class="mt-4 mb-5"><%= link_to 'ランダム生成削除', '/weapons/random_destroy', method: :post, data: {confirm: "削除しますか？"}, class: 'btn btn-lg btn-danger' %></p>
  <% end %>
  <% if @ammo_1 %>
    <p>
      <%= link_to @ammo_1.name, ammo_path(@ammo_1), class: 'font-weight-bold h4' %>
      <img class="rounded ml-2 mb-2" src=<%= "/ammos/#{@ammo_1.image}" %> alt="Ammo" width="40px" height="40px">
    </p>
  <% end %>
  <% if @ammo_2 %>
    <p>
      <%= link_to @ammo_2.name, ammo_path(@ammo_2), class: 'font-weight-bold h4' %>
      <img class="rounded ml-2 mb-2" src=<%= "/ammos/#{@ammo_2.image}" %> alt="Ammo" width="40px" height="40px">
    </p>
  <% end %>
  <p class="mt-4 mb-4"><%= link_to '弾薬ランダム生成', '/ammos/random', method: :post, class: 'btn btn-lg btn-primary' %></p>
  <% if @ammo_1 %>
    <p class="mt-4 mb-5"><%= link_to 'ランダム生成削除', '/ammos/random_destroy', method: :post, data: {confirm: "削除しますか？"}, class: 'btn btn-lg btn-danger' %></p>
  <% end %>
  <% if login? %>
    <p class="mt-5"><%= link_to 'バトル記録新規作成', "/battle_records/new", class: 'btn btn-lg btn-primary' %></p>
  <% end %>
</div>
